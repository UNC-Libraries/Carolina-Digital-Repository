# SERVER PROPERTIES CONFIGURATION

# Repository Web Server (http, yourrepository.org, 80, blank context)
repository.protocol=<%= @web_protocol %>
repository.host=<%= @web_host %>
repository.port=<%= @web_port %>
repository.context=<%= @web_context %>

# Fedora Commons Repository (https, localhost, 443, fedora, fedoraAdmin, ??)
fedora.repository.name=Carolina Digital Repository
# separate emails with spaces
fedora.administrator.email=<%= @fedora_administrator_email.join(" ") %>
fedora.protocol=<%= @fedora_protocol %>
fedora.port=<%= @fedora_port %>
fedora.port.number=<%= @fedora_port_number %>
fedora.redirect.port.number=<%= @fedora_redirect_port_number %>
fedora.shutdown.port.number=<%= @fedora_shutdown_port_number %>
fedora.host=<%= @fedora_host %>
fedora.context=fedora
fedora.activemq.data=/opt/data/fedora-activemq-data

fedora.admin.username=<%= @fedora_admin_username %>
fedora.admin.password=<%= @fedora_admin_password %>
fedora.appUser.username=<%= @fedora_app_user_username %>
fedora.appUser.password=<%= @fedora_app_user_password %>

fedora.stagesConfiguration=file:/opt/repository/stagesConfig.json

fedora.irods.host=<%= @fedora_irods_host %>
fedora.irods.port=<%= @fedora_irods_port %>
fedora.irods.zone=<%= @fedora_irods_zone %>
fedora.irods.default.resc=<%= @fedora_irods_default_resc %>
fedora.irods.username=<%= @fedora_irods_username %>
fedora.irods.password=<%= @fedora_irods_password %>
fedora.irods.readBufferSize=8192
fedora.irods.socketTimeout=1200

fedora.fracas.adminGroup=unc:app:lib:cdr:admin
fedora.fracas.curatorGroup=unc:app:lib:cdr:adminltd

# Mulgara Triple Store (localhost, 8080, blank context)
mulgara.protocol=<%= @mulgara_protocol %>
mulgara.host=<%= @mulgara_host %>
mulgara.port=<%= @mulgara_port %>
mulgara.context=webservices
mulgara.model.uri=<%= @mulgara_model_uri %>

# iRODS Grid Server (localhost, 1247, myZone, myResc, cdrservices, ??) 
irods.host=<%= @irods_host %>
irods.port=<%= @irods_port %>
irods.zone=<%= @irods_zone %>
irods.default.resc=<%= @irods_default_resc %>
irods.services.username=<%= @irods_services_username %>
irods.services.password=<%= @irods_services_password %>

# SOLR Server (http, localhost, 80, solr) 
solr.protocol=<%= @solr_protocol %>
solr.host=<%= @solr_host %>
solr.port=<%= @solr_port %>
solr.context=solr

# Access control
access.group.admin=unc:app:lib:cdr:adminltd

# Java Message Server (localhost, 61616)
jms.host=<%= @jms_host %>
jms.port=<%= @jms_port %>

# SMTP Mail Server (localhost, 25)
smtp.host=<%= @smtp_host %>
smtp.port=<%= @smtp_port %>

# ClamAV Service
clamd.host=<%= @clamd_host %>
clamd.port=<%= @clamd_port %>
clamd.timeout=60000

# Email Addresses (admin at yourrepository.org, no-reply at yourrepository.org)
contact.email=<%= @contact_email %>
administrator.email=<%= @administrator_email %>
repository.from.email=<%= @from_email %>
repository.reply.email=<%= @reply_email %>

external.base.file.url=<%= @external_base_file_url %>
external.base.url=/static/
djatoka.base.url=http://localhost/djatoka/

# Admin
admin.webapp.name=cdradmin
admin.base.path=/Collections
admin.access.groups=unc:app:lib:cdr:admin
admin.namespace=http://www.lib.unc.edu/dlservice/schemas
admin.initial.1.key=vagrant
admin.initial.1.value=Vagrant
admin.services.url=http://localhost/
controlled.paths.file=/opt/repository/controlledPaths.txt

# Deposit Forms
forms.dir=/opt/data/forms
forms.default.container.pid=<%= @forms_default_container_pid %>
forms.sword.username=<%= @forms_sword_username %>
forms.sword.password=<%= @forms_sword_password %>
forms.email.template.dir=/opt/data/forms-email-templates
forms.administrator.email=<%= @forms_administrator_email %>
forms.from.email=<%= @forms_from_email %>
forms.site.name=<%= @forms_site_name %>
forms.site.url=<%= @forms_site_url %>
forms.maxuploadsize=<%= @forms_maxuploadsize %>
forms.external.dir=<%= @forms_external_dir %>
forms.external.uriBase=<%= @forms_external_uri_base %>

# ingest service settings
redis.host=<%= @redis_host %>
redis.port=<%= @redis_port %>
auto.initialize.repo=no
initial.batch.ingest.dir=/opt/repository/tomcat/temp/
batch.ingest.dir=/opt/data/batch-ingests
ingest.polling.timeout.seconds=3600
ingest.polling.delay.seconds=10

# fixity service settings
fixity.resourceNames=<%= @fixity_resource_names %>
fixity.pollingInterval.seconds=<%= @fixity_polling_interval_seconds %>
fixity.staleInterval.seconds=<%= @fixity_stale_interval_seconds %>
fixity.objectLimit=<%= @fixity_object_limit %>

#services
services.context=services
rest.allow.ip.regex=<%= @rest_allow_ip_regex %>
services.enhancements.failed.path=/opt/data/enhance/failed/
services.activemq.config=/opt/repository/cdr-activemq.xml
services.activemq.data=/opt/data/cdr-activemq-data
services.indexing.collectionFilters=/opt/repository/collectionIndexing.properties

#sword properties
sword.context=sword
sword.version=1.3
sword.depositorNamespace=unc:app:lib:cdr:depositor:
sword.username=<%= @sword_username %>
sword.password=<%= @sword_password %>

#recaptcha
recaptcha.private.key=<%= @recaptcha_private_key %>
recaptcha.public.key=<%= @recaptcha_public_key %>

#google analytics
google.trackingId=<%= @google_tracking_id %>

data.dir=/opt/data/
repo.dir=/opt/repository/
departments.skos.url=file:/opt/deposit/departments.xml
